<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/discountTitle"
        android:layout_width="195dp"
        android:layout_height="27dp"
        android:layout_marginTop="25dp"
        android:text="This is a title"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/hockeyapp_text_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/discountDetails"
        android:layout_width="264dp"
        android:layout_height="97dp"
        android:layout_marginTop="66dp"
        android:text="This is a default description so that the programmer can see what he's doing"
        android:textColor="@color/hockeyapp_text_white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discountTitle" />

    <TextView
        android:id="@+id/dateExpiresIn"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:text="This discount is active until"
        android:textColor="@color/hockeyapp_text_white"
        app:layout_constraintBottom_toTopOf="@+id/saveToWishlistButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discountDetails" />

    <TextView
        android:id="@+id/discountExpirationDate"
        android:layout_width="87dp"
        android:layout_height="19dp"
        android:layout_marginBottom="91dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="50dp"
        android:text="18/11/2017"
        android:textColor="@color/hockeyapp_text_white"
        app:layout_constraintBottom_toTopOf="@+id/saveToWishlistButton"
        app:layout_constraintStart_toEndOf="@+id/dateExpiresIn"
        app:layout_constraintTop_toBottomOf="@+id/discountDetails" />

    <Button
        android:id="@+id/saveToWishlistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="161dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="88dp"
        android:text="Save to Wishlist"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateExpiresIn" />

</android.support.constraint.ConstraintLayout>